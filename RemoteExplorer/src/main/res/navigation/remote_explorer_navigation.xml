<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_books">
    <fragment
        android:id="@+id/navigation_books"
        android:name="com.yk.remoteexplorer.ui.book.BookFragment"
        android:label="Remote"
        tools:layout="@layout/fragment_books" >
        <action
            android:id="@+id/action_navigation_books_to_navigation_details"
            app:destination="@id/navigation_details" />
    </fragment>
    <fragment
        android:id="@+id/navigation_details"
        android:name="com.yk.remoteexplorer.ui.details.BookDetailsFragment"
        android:label="Remote"
        tools:layout="@layout/fragment_books" />
</navigation>